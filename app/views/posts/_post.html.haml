.large-6.columns.panelcontainer
  .panel.postpanel
    %h2
      = link_to post.title, post_path(post)
      %small.postcontrol
        = link_to 'edit', edit_post_path(post)
        &middot;
        = link_to 'delete', post_path(post), method: :delete
    %p.taglist
      = post.tags.map do |tag|
        -   '#' + tag.to_s
      - end.join(' ')
    = image_tag post.image.url(:medium), class: 'post-image post-image-small' if post.image?
    %p= truncate(post.body, length: 200)

    = link_to 'View comments', post_comments_path(post), class: 'tiny button viewcomments'
